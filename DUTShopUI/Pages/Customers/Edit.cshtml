@page
@model DUTShopUI.Pages.Customers.EditModel
@{
}

<br />
<h2 class="text-info">Edit Customer</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Customer.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Customer.FirstName"></label>
            </div>
            <div class="col-6">
                <input asp-for="Customer.FirstName" class="form-control" />
            </div>
            <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Customer.LastName"></label>
            </div>
            <div class="col-6">
                <input asp-for="Customer.LastName" class="form-control" />
            </div>
            <span asp-validation-for="Customer.LastName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Customer.BirthDate"></label>
            </div>
            <div class="col-6">
                <input asp-for="Customer.BirthDate" class="form-control" />
            </div>
            <span asp-validation-for="Customer.BirthDate" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Customer.Phone"></label>
            </div>
            <div class="col-6">
                <input asp-for="Customer.Phone" class="form-control" />
            </div>
            <span asp-validation-for="Customer.Phone" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}