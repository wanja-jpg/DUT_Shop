@page
@model DUTShopUI.Pages.Products.CreateModel
@{
}

<br />
<h2 class="mb-3">Create New Product</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3 p-3">
                <label asp-for="Product.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Product.Name" class="form-control" />
            </div>
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 p-3">
                <label asp-for="Product.UnitPrice"></label>
            </div>
            <div class="col-6">
                <input asp-for="Product.UnitPrice" class="form-control" />
            </div>
            <span asp-validation-for="Product.UnitPrice" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 p-3">
                <label asp-for="Product.StockQuantity"></label>
            </div>
            <div class="col-6">
                <input asp-for="Product.StockQuantity" class="form-control" />
            </div>
            <span asp-validation-for="Product.StockQuantity" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}